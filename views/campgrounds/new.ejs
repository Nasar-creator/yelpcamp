<% layout('layout/layout') %>
 <div class="row">
    <h1 class="text-center">New CampGround</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="md-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campgrounds[title]" required>
                <div class="valid-feedback">
                    Good
                </div>
                <div class="invalid-feedback">
                    Please fill
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="loc">Location</label>
                <input class="form-control" type="text" id="loc" name="campgrounds[location]" required>
                <div class="valid-feedback">
                    Good
                </div>
                <div class="invalid-feedback">
                    Please fill
                </div>
            </div>
           
            
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">INR</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                    aria-describedby="price-label" name="campgrounds[price]" required>
                </div>
                <div class="valid-feedback">
                    Good
                </div>
                
                <div class="invalid-feedback">
                    Please fill
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campgrounds[des]" required></textarea>
            

                <div class="valid-feedback">
                    Good
                </div>
                <div class="invalid-feedback">
                    Please fill
                </div>
            </div>
            <div class="input-group custom-file mb-3">
                <input type="file" class="form-control" id="image" name="image" multiple required>
                <label class="input-group-text custom-file-label" for="image">Upload</label>
            </div>


            <div class="mb-3">
                <button class="btn btn-success" >Submit</button>
            </div>
            
        </form>
        <div class="card-body">
        <a href="/campgrounds" class="card-link btn btn-danger">Cancle</a>
            </div>
       
    </div>
 </div>

 